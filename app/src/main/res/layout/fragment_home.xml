<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/title_today"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/today_title"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/uid_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#E0E0E0"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/title_today">

        <TextView
            android:id="@+id/text_my_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My ID: "
            android:textStyle="bold"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_user_uid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UID-HERE"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="monospace"/>

        <ImageView
            android:id="@+id/btn_copy_uid"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_content_copy"
            android:contentDescription="Copy UID"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="8dp"
            app:tint="?android:attr/textColorSecondary"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_medications"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uid_container" />

    <TextView
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No meds yet. Tap + to add."
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
