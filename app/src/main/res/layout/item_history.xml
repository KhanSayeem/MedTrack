<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginVertical="6dp"
    android:elevation="1dp">

    <TextView
        android:id="@+id/text_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nov 1, 2025"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text_history_med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Metformin - 8:00 AM"
        android:textSize="16sp"
        android:textColor="@color/text_subtle" />

    <TextView
        android:id="@+id/text_history_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TAKEN at 8:05 AM"
        android:textSize="16sp"
        android:textColor="@color/status_green" />

</LinearLayout>
