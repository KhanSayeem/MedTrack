<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_dialog"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/caretaker_add_patient_label"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/dialogPatientEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/caretaker_add_patient_email_hint"
        android:inputType="textEmailAddress"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/dialogPatientUid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/caretaker_add_patient_uid_hint"
        android:inputType="textVisiblePassword"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/dialogCancelButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:textColor="?attr/colorError"/>

        <Button
            android:id="@+id/dialogAddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caretaker_add_patient"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
